
#include <iostream>
using std::cout;
using std::endl;

bool asc(int a, int b) {
    return a<b;
}
bool dsc(int a, int b) {
    return a>b;
}

void sort(int vector[], bool(*comparePtr(int,int))) {
    for(int i = 0; i < 5 ; i++){
        for(int j = i+1; j < 5 ; j++){
            if(asc(vector[i],vector[j])) {
                int a = vector[i];
                vector[i] = vector[j];
                vector[j] = a;
                
            }
            
        }
        
    }
    
}
void print(int vector[]) {
    for(int i = 0; i < 5 ; i++) {
        cout << vector[i] << endl;
    }
}            

    
int main() {
     
    int vec[5] = {5,2,1,3,8};
    bool(*funcPtr)(int,int) = asc;
    sort(vec,funcPtr);
    print(vec);
    return 0;
}
