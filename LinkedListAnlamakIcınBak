class Node:
    data = None
    next = None
    
    def __init__(self,data):
        self.data = data
        
n1 = Node(1)
n2 = Node(2)
n3 = Node(3)
n4 = Node(4)

n1.next = n2
n2.next = n3
n3.next = n4

print(n1.data)
print(n2.data,n1.next.data)
print(n3.data,n1.next.next.data)
print(n4.data,n1.next.next.next.data)
print(n4.next,n1.next.next.next.next)
